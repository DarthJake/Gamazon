<!DOCTYPE html>
<html>
    <head>
        <title>Account</title>
        <script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>
        <link href="/assets/styles.css" rel='stylesheet' type='text/css' />
    </head>
    <body>
        <%- include('partials/header', {request: request}); %>
        <h1>Account</h1>
        <div class="cart">
            <h2>Your Cart has <%= cart.length %> item(s):</h2>
            <ul>
                <% for (var item of cart) { %>
                    <li><%= item.quantity %>x <a href="/product/<%= item.product_id %>"><%= item.name %></a></li>
                <% } %>
            </ul>
            <% if (cart.length > 0) { %>
                <form class = "purchase" method = "POST" action = "/account">
                    <input type = "submit" value="Purchase!">
                </form>
            <% } else { %>
                <h3>You have nothing in your cart!</h3>
            <% } %>
        </div>
    </body>
</html>